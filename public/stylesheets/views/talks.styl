.talk-list {
  h1 {
    margin: 0;

    @media screen and (max-width: 42em) {
        display: inline-block;
    }

    @media screen and (min-width: 42em) {
        text-align: right;
    }

    .anchor {
      font-size: 0.9em;
      color: #ccc !important;
      text-decoration: none;
      margin: 0 0.5em;
      vertical-align: top;
      font-weight: normal;
      visibility: hidden;

      @media screen and (max-width: 42em) {
          float: right;
      }
    }

    &:hover .anchor {
      visibility: visible;
    }
  }

  h2 {
    margin-top: 0.371428571em;
    margin-bottom: 0;
    font-size: 1.428571429em;
    line-height: 1.5;
  }

  h3 {
    font-size: 1em;
    line-height: 1.5;
    font-weight: normal;
    margin-top: 0;
  }

  article { margin-bottom: 1em; }

  ul.links {
    clear: both;
    overflow: hidden;
    padding: 0;
    margin: 0;

    li {
      display: block;
      list-style-type: none;
      float: left;
      margin: 1em 0.5em 1em 0;
    }

    li:before {
      content: "|" ;
      margin-right: 0.5em;
    }

    li:first-child:before {
      content: "" ;
      margin-right: 0;
    }
  }

}
