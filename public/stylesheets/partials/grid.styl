$grid-column-space = 2.5%

.clear {
	clear: both;
	overflow: hidden;
}

.left  { float: left; margin-right: 1em; }
.right { float: right; margin-left: 1em; }

.container {
	max-width: 960px;
	max-width: unit(960 / $base-font-size-px, rem);

	clear: both;
	overflow: hidden;
	margin: 0 auto;
}

.grid-row {
	clear: both;
	overflow: hidden;

	:first-child {
		margin-left: 0;
	}
}

grid($column-span, $columns-per-row) {
	width: ((100% - ($columns-per-row - 1) * $grid-column-space) / $columns-per-row) * $column-span + (($column-span - 1) * $grid-column-space);
	margin-left: $grid-column-space;
	float: left;
}

.grid-1-2 {
	grid(1, 2)
}

.grid-1-3 {
	grid(1, 3)
}
.grid-2-3 {
	grid(2, 3)
}

.grid-1-3:first-child,
.grid-1-3:nth-child(4n),
.grid-1-2:nth-child(odd) {
	overflow: hidden;
	clear: both;
	margin-left: 0;
}
