header(role="banner")
  h1: a(href="/", title="Home") Cologne.js
  h2 Welcome to Cologneâ€™s JavaScript user group
  - var view = locals.parentView.view
  nav
    ul
      li
        - if (view === 'index')
          strong Home
        - else
          a(href="/") Home

      li
        - if (view === 'talks' && locals.selectedYear)
          strong Talks
          ul
            each year in years
              - if (year === selectedYear)
                li: strong #{year}
              - else
                li: a(href="/talks/#{year}") #{year}
        - else
          a(href="/talks/") Talks