header(role="banner")
  h1: a(href="/", title="Home") PragueJS
  h2 Welcome to Czech JavaScript user group
  - var view = locals.view
  nav
    ul
      li
        - if (selectedView === 'index')
          strong Home
        - else
          a(href="/") Home
      li
        - if (selectedView === 'about')
          strong About
        - else
          a(href="/about") About
      li
        - if (selectedView === 'talks' && locals.selectedYear)
          strong Talks
          ul
            each year in years
              - if (year === selectedYear)
                li: strong #{year}
              - else
                li: a(href="/talks/#{year}") #{year}
        - else
          a(href="/talks/") Talks